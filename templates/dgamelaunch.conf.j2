    ifnxcp "%rdata/crawl-git.macro" "%rrcfiles/crawl-git/%n.macro",
    ifnxcp "%rdata/crawl-git-settings/init.txt" "%rrcfiles/crawl-git/%n.rc",
    setenv "MAIL" "%%CHROOT_MAILSPOOL%%/%n",
    setenv "SIMPLEMAIL" "1",
    unlink "%%CHROOT_MAILSPOOL%%/%n",
    mkdir "%rmorgue/%n/"

  encoding = "UTF-8"
}

